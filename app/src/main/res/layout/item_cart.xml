<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <!-- Ảnh sản phẩm -->
            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal" />

            <!-- Thông tin sản phẩm -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_12">

                <!-- Tên sản phẩm -->
                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/product_name_placeholder"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center" />

                <!-- Giá sản phẩm -->
                <TextView
                    android:id="@+id/tvProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_placeholder"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_gravity="center" />

                <!-- Thời gian đặt hàng -->
                <TextView
                    android:id="@+id/tvOrderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_time_placeholder"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_gravity="center" />

            </LinearLayout>

            <!-- Layout số lượng và tổng tiền -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_12">

                <!-- Nút xóa -->
                <ImageButton
                    android:id="@+id/btnRemove"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:src="@android:drawable/ic_menu_delete"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@android:color/holo_red_dark" />

                <!-- Nút giảm số lượng -->
                <ImageButton
                    android:id="@+id/btnDecrease"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:src="@drawable/ic_remove"
                    android:background="@drawable/bg_quantity_selector"
                    android:scaleType="centerInside"
                    android:layout_marginStart="@dimen/dp_8" />

                <!-- Số lượng -->
                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:text="@string/quantity_placeholder"
                    android:textSize="@dimen/sp_16"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/dp_8" />

                <!-- Nút tăng số lượng -->
                <ImageButton
                    android:id="@+id/btnIncrease"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:src="@drawable/ic_add"
                    android:background="@drawable/bg_quantity_selector"
                    android:scaleType="centerInside" />

                <!-- Tổng tiền -->
                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_price_placeholder"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginStart="@dimen/dp_16" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
